<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('partials/header') %>
        <title> Home </title>
    </head>
    <body>
        <%- include ('partials/navigation') %>
        <div class="container p-4">
            <div class="row">
                <% books.forEach(function (book) { %>
                    <div class="col-md-4">
                        <div class="card">

                            <div class="card-header">
                                <p> <%= book.title %>/<%= book.author %> </p>
                            </div>
                            
                            <img src="<%= book.image %>" style="width: 100%; height: 15vw;" alt="No image avail" class="card-image-top">

                            <div class="card-body">
                                <p> <%= book.description %></p>
                            </div>
                            
                            <div class="card-footer">
                                <button href="/delete/<%= book.id %>" class="btn btn-danger"> Delete </button>
                            </div>

                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

    </body>
</html>